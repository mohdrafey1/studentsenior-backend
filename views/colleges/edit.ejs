<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="container my-5">
            <div class="d-flex justify-content-between">
                <h3 class="mb-4 text-center">Edit The College</h3>
            <a href="/colleges/<%= college._id %> " class="btn btn-warning">Back</a>
            </div>
            <form method="POST" action="/colleges/<%= college._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="collegeName" class="form-label">College Name</label>
                    <input type="text" class="form-control" id="collegeName" name="name" value="<%= college.name %>"
                        required>
                </div>

                <div class="mb-3">
                    <label for="collegeDescription" class="form-label">College Description</label>
                    <textarea class="form-control" id="collegeDescription" name="description" rows="3"
                        required><%= college.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="collegeLocation" class="form-label">College Location</label>
                    <input type="text" class="form-control" id="collegeLocation" name="location"
                        value="<%= college.location %>" required>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status" required>
                        <option value="true" <%=college.status==='true' ? 'selected' : '' %>>True</option>
                        <option value="false" <%=college.status==='false' ? 'selected' : '' %>>False</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Update College</button>
               
            </form>
        </div>
    </body>