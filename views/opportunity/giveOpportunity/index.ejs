<% layout("/layouts/boilerplate.ejs") %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center my-4">
            <h1>All Give Opportunities</h1>
            <a href="/opportunity/giveopportunities/new" class="btn btn-primary">Add New</a>
        </div>

        <!-- Table layout for displaying Give Opportunities -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Opportunity Name</th>
                        <th scope="col">College Name</th>
                        <th scope="col">Whatsapp</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (allGiveOpportunities.length> 0) { %>
                        <% allGiveOpportunities.forEach((giveopportunity, index)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= index + 1 %>
                                </th>
                                <td>
                                    <%= giveopportunity.name %>
                                </td>
                                <td>
                                    <%= giveopportunity.college.name %>
                                </td>
                                <td>
                                    <%= giveopportunity.whatsapp %>
                                </td>
                                <td>
                                    <%= giveopportunity.status ? 'Approved' : 'Pending' %>
                                </td>
                                <td>
                                    <a href="/opportunity/giveopportunities/<%= giveopportunity._id %>"
                                        class="btn btn-sm btn-success">View</a>
                                    <form
                                        action="/opportunity/giveopportunities/<%= giveopportunity._id %>?_method=DELETE"
                                        method="POST" class="d-inline-block">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center">No Give Opportunities available at the
                                            moment.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>