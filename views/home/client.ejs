<% layout("/layouts/boilerplate.ejs") %>

    <div class="container my-4">
        <h3 class="text-center mb-4">All Clients</h3>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>College Name</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <% allClient.forEach(client=> { %>
                        <tr>
                            <td>
                                <%= client.username %>
                            </td>
                            <td>
                                <%= client.email %>
                            </td>
                            <td>
                                <%= client.college %>
                            </td>
                            <td>
                                <%= client.phone %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="client?page=<%= currentPage - 1 %>&limit=15" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <% if (totalPages <=5) { %>
                    <!-- Show all pages if 5 or fewer -->
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="client?page=<%= i %>&limit=15">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                            <% } else { %>
                                <!-- For more than 5 pages -->
                                <% if (currentPage> 2) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="client?page=1&limit=15">1</a>
                                    </li>
                                    <% if (currentPage> 3) { %>
                                        <li class="page-item disabled"><a class="page-link">...</a></li>
                                        <% } %>
                                            <% } %>
                                                <% for (let i=Math.max(1, currentPage - 1); i <=Math.min(totalPages,
                                                    currentPage + 1); i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="client?page=<%= i %>&limit=15">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <% if (currentPage < totalPages - 1) { %>
                                                            <% if (currentPage < totalPages - 2) { %>
                                                                <li class="page-item disabled"><a
                                                                        class="page-link">...</a></li>
                                                                <% } %>
                                                                    <li class="page-item">
                                                                        <a class="page-link"
                                                                            href="client?page=<%= totalPages %>&limit=15">
                                                                            <%= totalPages %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <% } %>

                                                                            <!-- Next Button -->
                                                                            <li
                                                                                class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                                <a class="page-link"
                                                                                    href="client?page=<%= currentPage + 1 %>&limit=15"
                                                                                    aria-label="Next">
                                                                                    <span
                                                                                        aria-hidden="true">&raquo;</span>
                                                                                </a>
                                                                            </li>
            </ul>
        </nav>
    </div>