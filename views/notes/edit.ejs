<% layout("/layouts/boilerplate.ejs") %>
    <div class="container mt-4">
        <h1>Edit Notes</h1>
        <form action="/notes/<%= notes._id %>?_method=PUT" method="POST">

            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" class="form-control" value="<%= notes.slug %>" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control"
                    value="<%= notes.description %>">
            </div>

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= notes.title %>" required>
            </div>

            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select" required>
                    <option value="true" <%=notes.status ? 'selected' : '' %>>True</option>
                    <option value="false" <%=notes.status ? '' : 'selected' %>>False</option>
                </select>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="javascript:history.back()" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>