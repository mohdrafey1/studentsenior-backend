<% layout("/layouts/boilerplate.ejs") %>
    <div class="container mt-4">
        <h1>Add New Notes</h1>
        <form action="/notes" method="POST">
            <div class="form-group">
                <label for="college">Select College</label>
                <select id="college" name="college" class="form-control" required>
                    <option value="">Select College</option>
                    <% colleges.forEach(college=> { %>
                        <option value="<%= college._id %>">
                            <%= college.name %>
                        </option>
                        <% }); %>
                </select>

            </div>

            <div class="form-group">
                <label for="subjectName">Subject Name</label>
                <input type="text" id="subjectName" name="subjectName" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="target">Target ( for ) </label>
                <input type="text" id="target" name="target" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="link">Link</label>
                <input type="text" id="link" name="link" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status" required>
                    <option value="">Select</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Notes</button>
        </form>
    </div>