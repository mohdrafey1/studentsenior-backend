<% layout("/layouts/boilerplate.ejs") %>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">
                            <%= pyq.subjectName %>
                        </h1>
                    </div>
                    <div class="card-body">
                        <p><strong>Subject Code:</strong>
                            <%= pyq.subjectCode %>
                        </p>
                        <p><strong>Semester:</strong>
                            <%= pyq.semester %>
                        </p>
                        <p><strong>Year:</strong>
                            <%= pyq.year %>
                        </p>
                        <p><strong>Branch:</strong>
                            <%= pyq.branch %>
                        </p>
                        <p><strong>Course:</strong>
                            <%= pyq.course %>
                        </p>
                        <p><strong>Exam Type:</strong>
                            <%= pyq.examType %>
                        </p>
                        <p><strong>College:</strong>
                            <%= pyq.college.name %>
                        </p>
                        <p><strong>PDF Link:</strong> <a href="<%= pyq.link %>" target="_blank"
                                class="btn btn-primary">View PDF</a></p>
                        <p><strong>Status:</strong>
                            <%= pyq.status %>
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="/pyqs/<%= pyq._id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/pyqs/<%= pyq._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>