<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= paginationUrl %>?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <% if (totalPages <=5) { %>
            <% for (let i=1; i <=totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="<%= paginationUrl %>?page=<%= i %>&limit=<%= limit %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                    <% } else { %>
                        <% if (currentPage> 2) { %>
                            <li class="page-item"><a class="page-link"
                                    href="<%= paginationUrl %>?page=1&limit=<%= limit %>">1</a></li>
                            <% if (currentPage> 3) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                                <% } %>
                                    <% } %>
                                        <% for (let i=Math.max(1, currentPage - 1); i <=Math.min(totalPages, currentPage
                                            + 1); i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link"
                                                    href="<%= paginationUrl %>?page=<%= i %>&limit=<%= limit %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (currentPage < totalPages - 1) { %>
                                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                                    <li class="page-item"><a class="page-link"
                                                            href="<%= paginationUrl %>?page=<%= totalPages %>&limit=<%= limit %>">
                                                            <%= totalPages %>
                                                        </a></li>
                                                    <% } %>
                                                        <% } %>

                                                            <li
                                                                class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                <a class="page-link"
                                                                    href="<%= paginationUrl %>?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                                                    aria-label="Next">
                                                                    <span aria-hidden="true">&raquo;</span>
                                                                </a>
                                                            </li>
    </ul>
</nav>