<% layout("/layouts/boilerplate.ejs") %>
    <div class="container mt-4">
        <h1>Edit Pyq</h1>
        <form action="/newpyqs/<%= pyqs._id %>?_method=PUT" method="POST">

            <div class="form-group">
                <label for="slug">Slug</label>
                <input type="text" id="slug" name="slug" class="form-control" value="<%= pyqs.slug %>" required>
            </div>

            <div class="form-group">
                <label for="year">year</label>
                <input type="text" id="year" name="year" class="form-control" value="<%= pyqs.year %>">
            </div>

            <div class="form-group">
                <label for="examType">examType</label>
                <input type="text" id="examType" name="examType" class="form-control" value="<%= pyqs.examType %>"
                    required>
            </div>

            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select" required>
                    <option value="true" <%=pyqs.status ? 'selected' : '' %>>True</option>
                    <option value="false" <%=pyqs.status ? '' : 'selected' %>>False</option>
                </select>
            </div>
            <div class="mb-3 d-flex gap-2">

                <input type="text" id="subject" name="subject" class="form-control"
                    value="<%= pyqs.subject?.subjectName %>" readonly>
                <input type="text" id="branch" name="branch" class="form-control"
                    value="<%= pyqs.subject?.branch?.branchName %>" readonly>

            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="javascript:history.back()" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>